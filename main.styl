fonts = "Avenir Next", Avenir, "Segoe UI", Roboto, "Helvetica Neue", sans-serif
riverside = hsl(#4C6A92)
nightriver = hsl(#1C2736)
duskriver = hsl(#384E6B)
dayriver = hsl(#ADBBCD)
whitewater = hsl(#F8FAFC)
sizexlarge = 3rem
sizelarge = 2rem
sizemedium = 1.5rem
sizenormal = 1.25rem
sizesmall = 1rem
sizetiny = .5rem

body
  font: 400 sizenormal / 1.6 fonts
  color: nightriver
  background-color: whitewater
  border-top: 4px solid riverside
  margin: 0
  padding: 0 16px
  text-size-adjust: 100%
  font-feature-settings: "kern" 1
  font-kerning: normal

h1
  font-weight: 700
  font-size: sizexlarge
  line-height: 1
  margin: 3rem 0
  text-align: left
  width: 80%

h2
  font-weight: 700
  font-size: sizelarge
  margin: 0

h3
  font-weight: 700
  font-size: sizemedium
  margin: 0

ul
  margin: 0
  padding: 0

p
  margin: sizemedium 0

a
  color: duskriver
  text-decoration: underline

a:hover
  color: riverside
  text-decoration: none

hr
  border: none
  border-top: 4px solid dayriver
  margin: 8px 0

blockquote
  background: riverside
  border: 2px solid nightriver
  color: whitewater
  font-size: sizenormal
  font-weight: 400
  margin: 0
  padding: 0 sizesmall
  text-align: left

footer
  font-size: sizesmall
  font-weight: 400
  color: whitewater

footer a
  background: nightriver
  color: inherit
  text-decoration: none

footer a:hover
  background: whitewater
  color: nightriver

label
  font-size sizesmall
  color duskriver
  display block
  font-weight 700

input
  width 40%
  border 2px solid nightriver
  font-size sizesmall
  padding sizetiny

button
  font-size sizesmall
  background duskriver
  color whitewater
  border 2px solid nightriver
  padding sizetiny sizesmall
  margin-left -2px

button:hover
  background nightriver

.full-width
  border-top: 2px solid nightriver
  margin: 1rem -1rem
  padding: 0 16px 0 16px

nav.full-width
  background: riverside
  margin: 1rem -1rem 0 -1rem
  padding-bottom: 16px

.card-row
  display: flex

.card
  flex: 1
  margin-right: 16px

.card:last-child
  margin-right: 0

.container
  max-width: 960px
  margin: 0 auto

.heading-secondary
  font-size: sizesmall
  font-weight: 400
  line-height: 1.5
  color: riverside
  display: block

.heading-meta
  border: 2px solid currentColor
  display: inline-block
  font-size: sizesmall
  font-weight: 700
  margin-bottom: 0
  margin-top: 16px
  padding: 8px

.tile
  list-style-type: none
  margin: 16px 16px 0 0
  background: whitewater
  border-bottom: 2px solid nightriver

.tile a
  padding: 16px
  text-decoration: none
  background: none
  color: inherit
  line-height: 1
  font-size: sizenormal
  font-weight: 700
  display: block

.tile:hover
  background: nightriver

.tile:hover a span
  color: dayriver

.tile:hover a
  color: whitewater

.hidden
  display none

@media screen and (max-width: 736px)

  .card-row, .card
    display: inline-block
    width: 100%
